@page
@model MyPortfolio.Pages.ContactModel
@{
    ViewData["Title"] = "Contacto";
}

<h2 class="contact-title">Contacto</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post" class="form">
    <div class="form-group">
        <label asp-for="ContactForm.CompanyName"></label>
        <input asp-for="ContactForm.CompanyName" class="form-control" />
        <span asp-validation-for="ContactForm.CompanyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactForm.ContactName"></label>
        <input asp-for="ContactForm.ContactName" class="form-control" />
        <span asp-validation-for="ContactForm.ContactName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactForm.Email"></label>
        <input asp-for="ContactForm.Email" class="form-control" />
        <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactForm.Phone"></label>
        <input asp-for="ContactForm.Phone" class="form-control" />
        <span asp-validation-for="ContactForm.Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactForm.Message"></label>
        <textarea asp-for="ContactForm.Message" class="form-control"></textarea>
        <span asp-validation-for="ContactForm.Message" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
